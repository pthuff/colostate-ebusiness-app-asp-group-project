@model LocalSportsLeague.Models.Game

@{
    ViewData["Title"] = "Add Game Score";
}

<h1>Add a Game Score</h1>

<hr />
<!-- Start form section -->
<form asp-action="Create" class="addScore" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="Seasonid" />
    <input type="hidden" asp-for="Officialid" value="@TempData["official"]" />
    <input type="hidden" asp-for="Sportid" value="@TempData["sport"]" />
    <div class="col1">
        <label asp-for="Datetime" class="control-label">Date of Game:</label>
        <input asp-for="Datetime" class="form-control" /><br />
        <span asp-validation-for="Datetime" class="text-danger"></span>
    </div>
    <div class="col2">
        <label asp-for="Hteamid" class="control-label">Home Team:</label>
        <select asp-for="Hteamid" class="form-control" asp-items="ViewBag.Hteamid"></select>
    </div>
    <div class="col3">
        <label asp-for="Hscore" class="control-label">Home Score:</label>
        <input asp-for="Hscore" class="form-control" /><br />
        <span asp-validation-for="Hscore" class="text-danger"></span>
    </div>
    <div class="col2">
        <label asp-for="Ateamid" class="control-label">Away Team:</label>
        <select asp-for="Ateamid" class="form-control" asp-items="ViewBag.Ateamid"></select>
    </div>
    <div class="col3">
        <label asp-for="Ascore" class="control-label">Away Score:</label>
        <input asp-for="Ascore" class="form-control" /><br />
        <span asp-validation-for="Ascore" class="text-danger"></span>
    </div>
    <div class="span2col">
        <p>
            <label>
                <input asp-for="Ot" /> Check if the game went overtime
            </label>
        </p>
    </div>
    <div class="span2col">
        <input type="submit" value="Add Score" class="subButton" />
    </div>
</form>
<hr />
<!-- End form section -->
<div class="buttonGroup">
    <a asp-action="Index" asp-route-seasonid="@TempData["season"]" class="btn-buttons">Edit or delete scores</a>
    <a asp-action="SubmitScores" class="btn-buttons">Return to officials page</a>
</div>

